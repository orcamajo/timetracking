{
  "name": "time-tracking-forge-app",
  "version": "1.0.0",
  "private": true,
  "description": "Jira Cloud time tracking with hierarchy rollup and timesheet views",
  "main": "out/index.js",
  "scripts": {
    "build": "tsc",
    "build:frontend": "cd static/frontend && npm run build",
    "build:all": "npm run build && npm run build:frontend",
    "lint": "tsc --noEmit",
    "deploy": "npm run build:all && forge deploy",
    "tunnel": "npm run build && forge tunnel"
  },
  "dependencies": {
    "@forge/api": "^4.0.0",
    "@forge/resolver": "^1.6.0",
    "@forge/kvs": "^1.0.0"
  },
  "devDependencies": {
    "typescript": "^5.4.0",
    "@types/node": "^20.11.0"
  }
}
